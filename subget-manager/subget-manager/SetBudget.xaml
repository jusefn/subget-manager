<Window x:Class="subget_manager.SetBudget"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:subget_manager"
        mc:Ignorable="d"
        Title="SetBudget" Height="130" Width="290" ResizeMode="NoResize" WindowStyle="SingleBorderWindow">
    <StackPanel>
        <Label Content="Set Budget: (Use the period character for decimals)"/>
        <TextBox x:Name="budgetTxTBox" Text="" Margin="4"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="saveButton" Content="Save" Click="saveButton_Click" Grid.Column="0" Margin="10" />
            <Button x:Name="cancelButton" Content="Close" Click="cancelButton_Click" Grid.Column="1" Margin="10" />
        </Grid>

    </StackPanel>
</Window>
